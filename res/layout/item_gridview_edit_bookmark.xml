<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_gridview" >

    <com.esquel.epass.ui.WiggleImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_gridview"
        android:background="@null"
        style="@style/image_center_inside"
        android:src="@drawable/anh1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title"
        android:layout_alignTop="@+id/img"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="@dimen/padding_gridview"
        android:layout_marginRight="@dimen/padding_gridview"
        android:visibility="gone"
        android:background="@drawable/bg_item_gridview" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img"
        android:layout_alignTop="@+id/img"
        android:paddingLeft="5dp"
         android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:text="新闻1"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_edit_bookmark_delete"
        android:visibility="gone" />

</RelativeLayout>