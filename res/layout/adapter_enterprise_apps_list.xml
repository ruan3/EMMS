<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <com.esquel.epass.ui.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/size_icon_item_enterprise_app"
        android:layout_height="@dimen/size_icon_item_enterprise_app"
        android:layout_marginRight="20dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@null"
        app:border_color="@color/border"
        app:border_width="0dip"
        app:corner_radius="8dip"
        app:oval="false"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/enterprise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/icon"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#7f7f7f"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterprise_name"
        android:layout_toRightOf="@+id/icon"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#7f7f7f"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_text_enterprise"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:text="升肩"
        android:textColor="#a62740"
        android:textSize="18sp" />

</RelativeLayout>