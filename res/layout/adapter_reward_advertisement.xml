<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/size_icon_item_enterprise_app"
        android:layout_height="@dimen/size_icon_item_enterprise_app"
        android:layout_marginRight="20dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@null" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#666666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_text_enterprise"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:text="升肩"
        android:textColor="#a62740"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="@dimen/size_icon_item_enterprise_app"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/decs" >

        <ImageView
            android:id="@+id/icon_undefine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:scaleType="center"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_undefine" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="500"
            android:textColor="#a62740"
            android:textSize="26sp" />
    </LinearLayout>

</RelativeLayout>